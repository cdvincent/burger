<div class="container">

<div id="header" class= "row jumbotron">
    <h2>Eat Da Burger</h2>
</div>

<div id= "burgerImg">
    <img id= "burgerImg" src="img/burger.jpg">
</div>

    <div id= "devoured" class= "row justify-content-center">
        <div id= "isDevoured" class="col-4">
            <h3>Eat a tasty burger!</h3>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div id= "notDevoured" class="col-4">
            <h3>Devoured burgers:</h3>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class= "col-sm" id= "formAlign">
            <form class="create-form">
                <div class="form-group">
                    <input type="text" id="burger" name="name">
                </div>
                <button class= "btn btn-primary" id="submit" type="submit">Submit</button>
            </form>
        </div>
    </div>

</div>